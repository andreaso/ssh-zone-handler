
zone "example.com" {
    type primary;
    file "/var/lib/bind/example.com.zone";
    key-directory "/etc/bind/keys/com";
    auto-dnssec maintain;
    inline-signing yes;
    allow-transfer { 192.168.63.11; 192.168.63.12; };
    also-notify { 192.168.63.11; 192.168.63.12; };
};

